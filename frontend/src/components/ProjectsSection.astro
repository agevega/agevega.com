---
interface Publication {
  authors: string;
  year: string;
  title: string;
  journal: string;
  reference: string;
  link: string;
  impactFactor: string;
}

const publications: Publication[] = [
  {
    authors:
      "Vega-Vaquero, A., Bonora, G., Morselli, M., Vaquero-Sedas, MI., Rubbi, L., Pellegrini, M., & Vega-Palas, M.",
    year: "2016",
    title:
      "Novel features of telomere biology revealed by the absence of telomeric DNA methylation",
    journal: "Genome Research",
    reference: "26: 1047-1056",
    link: "https://genome.cshlp.org/content/26/8/1047.long",
    impactFactor: "11.92 (JCR 2016)",
  },
  {
    authors:
      "Farrell, C., Vaquero-Sedas, M., Cubiles, M., Thompson, M., Vega-Vaquero, A., Pellegrini M & Vega-Palas, M.",
    year: "2022",
    title:
      "A complex network of interactions governs DNA methylation at telomeric regions",
    journal: "Nucleic Acids Research",
    reference: "50: 1449–1464",
    link: "https://academic.oup.com/nar/article/50/3/1449/6513582",
    impactFactor: "16.97 (JCR 2021)",
  },
];
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4">
    <!-- Publications Section -->
    <div class="max-w-5xl mx-auto mb-20">
      <h2 class="text-3xl font-bold text-white mb-2">
        Publicaciones Científicas
      </h2>
      <p class="text-slate-400 mb-10">
        Investigación en epigenética y genómica computacional.
      </p>

      <div class="space-y-6">
        {
          publications.map((pub) => (
            <div class="bg-slate-900/50 rounded-xl border border-slate-800 p-6 hover:border-indigo-500/30 transition-colors">
              <div class="flex flex-col md:flex-row gap-4 justify-between items-start">
                <div class="flex-grow">
                  <h3 class="text-xl font-bold text-white mb-2 leading-tight">
                    <a
                      href={pub.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-indigo-400 transition-colors"
                    >
                      {pub.title}
                    </a>
                  </h3>
                  <div class="text-sm text-slate-400 mb-3 leading-relaxed">
                    {pub.authors
                      .split("Vega-Vaquero, A.")
                      .map((part, i, arr) => (
                        <>
                          {part}
                          {i < arr.length - 1 && (
                            <strong class="text-indigo-300">
                              Vega-Vaquero, A.
                            </strong>
                          )}
                        </>
                      ))}
                    ({pub.year})
                  </div>
                  <div class="flex flex-wrap gap-4 text-sm">
                    <span class="text-indigo-300 font-medium">
                      {pub.journal}
                    </span>
                    <span class="text-slate-500">|</span>
                    <span class="text-slate-400">{pub.reference}</span>
                  </div>
                </div>
                <div class="flex-shrink-0 mt-4 md:mt-0">
                  <div class="inline-flex flex-col items-end">
                    <span class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">
                      Impact Factor
                    </span>
                    <span class="text-2xl font-bold text-emerald-400">
                      {pub.impactFactor.split(" ")[0]}
                    </span>
                    <span class="text-[10px] text-slate-500">
                      {pub.impactFactor.split(" ").slice(1).join(" ")}
                    </span>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
