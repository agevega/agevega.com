---
interface Publication {
  authors: string;
  year: string;
  title: string;
  journal: string;
  reference: string;
  link: string;
  impactFactor: string;
}

const publications: Publication[] = [
  {
    authors:
      "Vega-Vaquero, A., Bonora, G., Morselli, M., Vaquero-Sedas, MI., Rubbi, L., Pellegrini, M., & Vega-Palas, M.",
    year: "2016",
    title:
      "Novel features of telomere biology revealed by the absence of telomeric DNA methylation",
    journal: "Genome Research",
    reference: "26: 1047-1056",
    link: "https://genome.cshlp.org/content/26/8/1047.long",
    impactFactor: "11.92 (JCR 2016)",
  },
  {
    authors:
      "Farrell, C., Vaquero-Sedas, M., Cubiles, M., Thompson, M., Vega-Vaquero, A., Pellegrini M & Vega-Palas, M.",
    year: "2022",
    title:
      "A complex network of interactions governs DNA methylation at telomeric regions",
    journal: "Nucleic Acids Research",
    reference: "50: 1449–1464",
    link: "https://academic.oup.com/nar/article/50/3/1449/6513582",
    impactFactor: "16.97 (JCR 2021)",
  },
];
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4">
    <!-- Publications Section -->
    <div class="max-w-5xl mx-auto mb-20">
      <h2 class="text-3xl font-bold text-white mb-2">
        Publicaciones Científicas
      </h2>
      <p class="text-slate-400 mb-10">
        Investigación en epigenética y genómica computacional.
      </p>

      <div class="space-y-6">
        {
          publications.map((pub) => (
            <div class="bg-slate-900/50 rounded-xl border border-slate-800 p-6 hover:border-indigo-500/30 transition-colors">
              <div class="flex flex-col md:flex-row gap-4 justify-between items-start">
                <div class="flex-grow">
                  <h3 class="text-xl font-bold text-white mb-2 leading-tight">
                    <a
                      href={pub.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-indigo-400 transition-colors"
                    >
                      {pub.title}
                    </a>
                  </h3>
                  <div class="text-sm text-slate-400 mb-3 leading-relaxed">
                    {pub.authors
                      .split("Vega-Vaquero, A.")
                      .map((part, i, arr) => (
                        <>
                          {part}
                          {i < arr.length - 1 && (
                            <strong class="text-indigo-300">
                              Vega-Vaquero, A.
                            </strong>
                          )}
                        </>
                      ))}
                    ({pub.year})
                  </div>
                  <div class="flex flex-wrap gap-4 text-sm">
                    <span class="text-indigo-300 font-medium">
                      {pub.journal}
                    </span>
                    <span class="text-slate-500">|</span>
                    <span class="text-slate-400">{pub.reference}</span>
                  </div>
                </div>
                <div class="flex-shrink-0 mt-4 md:mt-0">
                  <div class="inline-flex flex-col items-end">
                    <span class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">
                      Impact Factor
                    </span>
                    <span class="text-2xl font-bold text-emerald-400">
                      {pub.impactFactor.split(" ")[0]}
                    </span>
                    <span class="text-[10px] text-slate-500">
                      {pub.impactFactor.split(" ").slice(1).join(" ")}
                    </span>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Featured Project: agevega.com -->
    <div class="max-w-6xl mx-auto mb-20 border-t border-white/10 pt-20">
      <div class="flex flex-col md:flex-row gap-8 items-start mb-12">
        <div class="flex-grow">
          <h2 class="text-3xl font-bold text-white mb-4">
            Proyecto Destacado: <span class="text-indigo-400">agevega.com</span>
          </h2>
          <p class="text-slate-400 text-lg leading-relaxed max-w-2xl">
            Este portfolio no es solo un escaparate, es una demostración técnica
            viva. Diseñado siguiendo principios <strong>GitOps</strong> y un ciclo
            de vida <strong>DevOps</strong> completo, implementando una arquitectura
            100% inmutable y automatizada en AWS.
          </p>
        </div>
        <div class="flex-shrink-0">
          <a
            href="https://github.com/agevega/agevega.com"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition-colors border border-slate-700"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            Ver Código
          </a>
        </div>
      </div>

      <!-- DevOps Cycle Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- PLAN -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-indigo-500/20 hover:border-indigo-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-indigo-500/10 flex items-center justify-center text-indigo-400 font-bold text-xs border border-indigo-500/20 group-hover:bg-indigo-500/20 transition-colors"
            >
              01
            </span>
            <h3 class="text-white font-bold">PLAN</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Diseño de arquitectura inmutable. Definición completa de recursos
            como código (IaC) modular y escalable.
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >Terraform</span
            >
          </div>
        </div>

        <!-- CODE -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-indigo-500/20 hover:border-indigo-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-indigo-500/10 flex items-center justify-center text-indigo-400 font-bold text-xs border border-indigo-500/20 group-hover:bg-indigo-500/20 transition-colors"
            >
              02
            </span>
            <h3 class="text-white font-bold">CODE</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Frontend optimizado con Astro v5 (Zero-JS). Estilizado con
            TailwindCSS. Backend Serverless en Python.
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >Astro</span
            >
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >Python</span
            >
          </div>
        </div>

        <!-- BUILD -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-purple-500/20 hover:border-purple-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-400 font-bold text-xs border border-purple-500/20 group-hover:bg-purple-500/20 transition-colors"
            >
              03
            </span>
            <h3 class="text-white font-bold">BUILD</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Construcción de imágenes Docker Multi-stage. Optimización para
            arquitectura ARM64 (AWS Graviton).
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >Docker</span
            >
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >ARM64</span
            >
          </div>
        </div>

        <!-- TEST -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-purple-500/20 hover:border-purple-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-purple-500/10 flex items-center justify-center text-purple-400 font-bold text-xs border border-purple-500/20 group-hover:bg-purple-500/20 transition-colors"
            >
              04
            </span>
            <h3 class="text-white font-bold">TEST</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Validación de tipos estáticos. Linting de código y seguridad
            (Security Scans) en CI Pipeline.
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >CI/CD</span
            >
          </div>
        </div>

        <!-- RELEASE -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-emerald-500/20 hover:border-emerald-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-400 font-bold text-xs border border-emerald-500/20 group-hover:bg-emerald-500/20 transition-colors"
            >
              05
            </span>
            <h3 class="text-white font-bold">RELEASE</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Versionado Semántico (Git Tags). Publicación de artefactos
            inmutables en AWS ECR.
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >Git</span
            >
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >ECR</span
            >
          </div>
        </div>

        <!-- DEPLOY -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-emerald-500/20 hover:border-emerald-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-400 font-bold text-xs border border-emerald-500/20 group-hover:bg-emerald-500/20 transition-colors"
            >
              06
            </span>
            <h3 class="text-white font-bold">DEPLOY</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Despliegue automatizado en Amazon EC2 (Spot). Sincronización de
            Assets estáticos en S3 + CloudFront.
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >EC2</span
            >
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >S3</span
            >
          </div>
        </div>

        <!-- OPERATE -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-cyan-500/20 hover:border-cyan-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-cyan-500/10 flex items-center justify-center text-cyan-400 font-bold text-xs border border-cyan-500/20 group-hover:bg-cyan-500/20 transition-colors"
            >
              07
            </span>
            <h3 class="text-white font-bold">OPERATE</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Hardening de sistema operativo (Amazon Linux 2023). Gestión de
            seguridad perimetral (WAF/Security Groups).
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >Linux</span
            >
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >WAF</span
            >
          </div>
        </div>

        <!-- MONITOR -->
        <div
          class="bg-slate-900/40 p-6 rounded-xl border border-cyan-500/20 hover:border-cyan-500/40 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <span
              class="w-8 h-8 rounded-lg bg-cyan-500/10 flex items-center justify-center text-cyan-400 font-bold text-xs border border-cyan-500/20 group-hover:bg-cyan-500/20 transition-colors"
            >
              08
            </span>
            <h3 class="text-white font-bold">MONITOR</h3>
          </div>
          <p class="text-sm text-slate-400 leading-relaxed">
            Observabilidad nativa con CloudWatch. Estrategias FinOps para
            optimización continua de costes.
          </p>
          <div class="mt-4 flex gap-2">
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >CloudWatch</span
            >
            <span
              class="text-[10px] px-2 py-1 bg-slate-950 rounded text-slate-500 border border-slate-800"
              >FinOps</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
