---
interface Project {
  title: string;
  description: string;
  tags: string[];
  link: string;
}

const projects: Project[] = [
  {
    title: "Santander Digital Services",
    description:
      "Ingeniero DevSecOps Senior. Desarrollo de aplicaciones IA Cloud-Native, IaC con Terraform Enterprise y seguridad en serverless (Lambda/Fargate). Implementación de clusters EKS y gestión de API Gateway.",
    tags: ["AWS", "Terraform Enterprise", "EKS", "GitHub Actions", "Python"],
    link: "#",
  },
  {
    title: "Coches.com",
    description:
      "Ingeniero DevOps. Automatización de pipelines CI/CD y administración de Kubernetes (Helm/ArgoCD). Optimización de costes y observabilidad con Prometheus/ELK. Gestión de bases de datos RDS/DocumentDB.",
    tags: ["AWS", "Kubernetes", "Jenkins", "GitLab CI", "Elasticsearch"],
    link: "#",
  },
  {
    title: "Ericsson",
    description:
      "Consultor DevOps. Coordinación de equipos internacionales para integración 4G/5G. Mantenimiento de flujos CI/CD y desarrollo de herramientas de automatización en Python y Groovy.",
