---
interface SkillGroup {
  category: string;
  items: string[];
}

const skills: SkillGroup[] = [
  { category: "Cloud", items: ["AWS", "Azure", "GCP"] },
  {
    category: "IaC & Automation",
    items: ["Terraform", "Ansible", "CloudFormation", "Pulumi"],
  },
  { category: "Containers", items: ["Docker", "Kubernetes", "EKS", "ECS"] },
  { category: "CI/CD", items: ["GitHub Actions", "GitLab CI", "Jenkins"] },
  { category: "Dev", items: ["Python", "Go", "TypeScript", "Astro"] },
];
---

<section id="skills" class="py-20 bg-slate-900/50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-white mb-12">Stack Tecnol√≥gico</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        skills.map((group) => (
          <div class="bg-slate-900 p-6 rounded-xl border border-slate-800">
            <h3 class="text-indigo-400 font-semibold mb-4">{group.category}</h3>
            <div class="flex flex-wrap gap-2">
              {group.items.map((item) => (
                <span class="px-3 py-1 bg-slate-800 text-slate-300 text-sm rounded-md border border-slate-700">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
