---
interface SkillGroup {
  category: string;
  items: string[];
}

const skills: SkillGroup[] = [
  {
    category: "Cloud & Infra",
    items: ["AWS", "Terraform Enterprise", "Ansible", "CloudFormation"],
  },
  {
    category: "Containers & Orchestration",
    items: ["Kubernetes (EKS)", "Helm", "ArgoCD", "Docker"],
  },
  {
    category: "CI/CD & DevOps",
    items: ["GitHub Actions", "Jenkins", "GitLab CI", "Git"],
  },
  {
    category: "Observability",
    items: ["Prometheus", "Grafana", "ELK Stack", "CloudWatch"],
  },
  {
    category: "Languages & Tools",
    items: ["Python", "Bash/Shell", "Groovy", "Linux"],
  },
];
---

<section id="skills" class="py-20 bg-slate-900/50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-white mb-6">Stack Tecnológico</h2>
    <p class="text-slate-400 mb-12 max-w-3xl text-lg">
      Mi caja de herramientas se centra en tecnologías probadas para entornos de
      producción. Domino el ciclo de vida completo del desarrollo de software,
      desde el código hasta el despliegue y la monitorización.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        skills.map((group) => (
          <div class="bg-slate-900 p-6 rounded-xl border border-slate-800">
            <h3 class="text-indigo-400 font-semibold mb-4">{group.category}</h3>
            <div class="flex flex-wrap gap-2">
              {group.items.map((item) => (
                <span class="px-3 py-1 bg-slate-800 text-slate-300 text-sm rounded-md border border-slate-700">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
